<%- include('partials/head'); -%>

<body id="page-top">
   
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
        <!-- End of Sidebar -->
        <%- include('partials/side'); -%>
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('partials/top'); -%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <% if (message != '') { %>
                        <p class="text-center text-danger"><%= message %></p>
                    <% } %>

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Edit Ticket</h1>
                                        </div>
                                        <% if (ticket) { %>
                                        <form class="add-user-form" action="" method="post" enctype="multipart/form-data">
                                            
                                            <div class="form-group">
                                                <label for="name">หัวข้อ/ประเภทที่แจ้ง</label>
                                                <input type="text" class="form-control" name="topic" id="topic" value="<%= ticket.topic %>" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Zone A/B/C</label>
                                                <input type="text" class="form-control" name="zoneID" id="zoneID" value="<%= ticket.zoneID %>" required>
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="number">จุดที่แจ้งปัญหา</label>
                                                <input type="text" class="form-control" name="locID" id="locID" value="<%= ticket.locID %>" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="om">รายละเอียด</label>
                                                <textarea class="form-control" name="detail" id="detail" rows="3" ><%= ticket.detail %></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="om">สถานะการแจ้งซ่อม</label>
                                                <input type="text" class="form-control" name="assigneeID" id="assigneeID" placeholder="Number" value="<%= ticket.assigneeID %>" required>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="text" class="form-control bg-light border-0 small" name="floor" id="floor" 
                                                    placeholder="กรอก Check point" aria-label="Search" aria-describedby="basic-addon2" value="<%= ticket.floor %>">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-primary" type="button">
                                                            <i class="fas fa-search fa-sm"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <select class="form-control" name="userID" id="userID" onchange="ChangecatList()" required>
                                                    <option value="<%= ticket.userID %>"><%= ticket.userID %></option>
                                                    <option value="1">บุคคลที่รับผิดชอบที่ 1</option>
                                                    <option value="2">บุคคลที่รับผิดชอบที่ 2</option>
                                                    <option value="3">บุคคลที่รับผิดชอบที่ 3</option>
                                                    <option value="4">บุคคลที่รับผิดชอบที่ 4</option>
                                                    <option value="5">บุคคลที่รับผิดชอบที่ 5</option>
                                                    <option value="6">บุคคลที่รับผิดชอบที่ 6</option>
                                                    <option value="7">บุคคลที่รับผิดชอบที่ 7</option>
                                                    <option value="8">บุคคลที่รับผิดชอบที่ 8</option>
                                                </select>
                                            </div>
                                            
                                            <br>
                                    
                                    
                                            <button type="submit" class="btn btn-primary float-right">Update</button>
                     
                                        </form>
                                        <% } else { %>
                                            <p class="text-center">Player Not Found. Go <a href="/open">here</a> to add users.</p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
                <!-- /.container-fluid -->

            </div>
            <br>
            <!-- End of Main Content -->

           

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
        <!-- <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a> -->

    <!-- Logout Modal-->
    <%- include('partials/logout'); -%>
   
    <!-- Footer -->
    <%- include('partials/foot'); -%>
    

    <!-- Bootstrap core JavaScript-->
    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="../vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="../js/demo/chart-area-demo.js"></script>
    <script src="../js/demo/chart-pie-demo.js"></script>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    
        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    
    
        <!-- Page level plugins -->
        <script src="vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>
    
        <!-- Page level custom scripts -->
        <script src="js/demo/datatables-demo.js"></script>

</body>

  </html>