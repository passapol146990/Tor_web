<%- include('partials/header'); -%>

<body id="page-top">
   
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('partials/sidebar'); -%>
        <!-- End of Sidebar -->
       <!-- <style>
            .navbar {
           overflow: hidden;
           background-color: #333;
           position: fixed;
           top: 0;
           width: 100%;
         }
         </style>
         -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('partials/topbar'); -%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        
                        <a href="/open" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-download fa-sm text-white-50"></i>เปิด Ticket</a>
                    </div>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <!-- <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">เมนูแจ้งซ่อม/แจ้งปัญหา</h6>
                        </div> -->
                        <div class="card-body">
                            <div class="table-responsive">
                                <% if (ticket.length > 0) { %>
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr class="badge-primary">
                                            <th>วันที่เวลา</th>
                                            <th>ชื่อเรื่องที่แจ้ง</th>
                                            <th>ผู้แจ้ง</th>
                                            <th>หน่วยงานที่รับผิดชอบ</th>
                                            <th>operator</th>
                                            <th>OM/RM</th>
                                            <th>ผู้รับผิดชอบ</th>
                                            <th>สถานะ</th>
                                            
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        <% ticket.forEach((ticket, index) => { %>
                                            <tr>
                                                <th><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.dt %></a></th>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.topic %></a> </td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.detail %></a></td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.assigneeID %></a></td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.locID %></a></td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.floor %></a></td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.userID %></a></td>
                                                <td><a href="open_edit/<%= ticket.id %>" rel="noopener"><%= ticket.attach %></a></td>
                                               <!-- <td>
                                                    <a href="open_edit/<%= //ticket.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                                    <a href="delete/<%= //ticket.id %>" class="btn btn-sm btn-danger">Delete</a> 
                                                </td> -->
                                            </tr>
                                        <% }) %>
                                        
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <p class="text-center">No players found. Go <a href="/open" >here</a> to add players.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>  
                </div>
                <!-- /.container-fluid -->

            </div>
            <br>
            <!-- End of Main Content -->

           

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
        <!-- <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a> -->

    <!-- Logout Modal-->
    <%- include('partials/logout'); -%>
   
    <!-- Footer -->
    <%- include('partials/footer'); -%>
    

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

