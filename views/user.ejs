                                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                    รูปถ่าย
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                
                    </ul>
                
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                         <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">กรอกค้นหา USER</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <% if (users.length > 0) { %>
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <!-- <tr>
                                            <th colspan="5">TEST</th>
                                            
                                            
                                        </tr> -->
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">First Name</th>
                                            <th scope="col">Last Name</th>
                                            <th scope="col">Position</th>
                                            <th scope="col">Number</th>
                                            <th scope="col">Username</th>
                                            <th scope="col">Action</th>
                                            
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        <% users.forEach((user, index) => { %>
                                            <tr>
                                                <th><a href="edit/<%= user.id %>" rel="noopener"><%= user.id %></a></th>
                                                <td><img src="/assets/img/<%= user.image %>" class="rounded-circle user-img" alt=""></td>
                                                <td><a href="edit/<%= user.id %>" rel="noopener"><%= user.name %></a></td>
                                                <td><a href="edit/<%= user.id %>" rel="noopener"><%= user.email %></a></td>
                                                <td><a href="edit/<%= user.id %>" rel="noopener"><%= user.telnum %></a></td>
                                                <td><a href="edit/<%= user.id %>" rel="noopener"><%= user.type %></a></td>
                                                <td><a href="edit/<%= user.id %>" rel="noopener">@<%= user.password %></a></td>
                                               
                                                <td>
                                                    <a href="edit/<%= user.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                                    <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>  
                </div>
                <!-- /.container-fluid -->

            </div>
            <br>
            <!-- End of Main Content -->

           

        </div>
        <!-- End of Content Wrapper -->

    </div>
